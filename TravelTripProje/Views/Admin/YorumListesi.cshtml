@using TravelTripProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.KullaniciAdı</td>
        <td>@x.Mail</td>
        <td>@x.Yorum</td>
        <td>@x.Blog.Baslik</td>
        <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>   @*//href # olan yere admincontroller'da yorumsil de uyguladığımız yere yönlendirdik burası kritik*@
        <td><a href="/Admin/YorumBul/@x.ID" class="btn btn-primary">Güncelle</a></td>
    </tr>
    }
</table>